<mui:MetroWindow x:Class="MasterMachineSystem.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMachineSystem"
        xmlns:mui="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Style="{StaticResource MUIDialog}"
        Title="新建测试项目" Height="160" Width="239.166" >
    <Grid>
        <Label Content="为你的测试项目设置一个名称：" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtProjectName" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211"/>
        <Button x:Name="btnEnter" Content="确定" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="90"
            Style="{StaticResource AccentedSquareButtonStyle}" BorderBrush="{x:Null}" IsDefault="True" Height="35" Click="Enter"/>
        <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Left" Margin="131,80,0,0" VerticalAlignment="Top" Width="90"
            Style="{StaticResource AccentedSquareButtonStyle}" BorderBrush="{x:Null}" IsCancel="True" Height="35" Click="Cancel"/>

    </Grid>
</mui:MetroWindow>
